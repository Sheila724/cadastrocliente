<h1>Editar Cliente</h1>
<form action="/clients/edit/{{client.id}}" method="POST">
    <label for="name">Nome:</label>
    <input type="text" id="name" name="name" value="{{client.name}}" required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{client.email}}" required>

    <label for="phone">Telefone:</label>
    <input type="text" id="phone" name="phone" value="{{client.phone}}">

    <label for="endereco">Endere√ßo:</label>
    <input type="text" id="endereco" name="endereco" value="{{client.endereco}}">

    <div style="display: flex; gap: 15px; margin-top: 10px;">
        <button type="submit" class="btn-salvar">Salvar</button>
        <a href="/clients" class="btn-voltar">Voltar</a>
    </div>
</form>

<style>
    .btn-salvar, .btn-voltar {
        padding: 12px 40px;
        font-size: 1.2rem;
        background-color: #da480f;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.3s;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }
    .btn-salvar:hover, .btn-voltar:hover {
        background-color: #a93208;
    }
</style>
